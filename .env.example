# .env.example
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=research_agent
DB_PASSWORD=your_secure_password_here
DB_DATABASE=research_agent_db

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5

# Search Provider API Keys
TAVILY_API_KEY=your_api_key_here
# DuckDuckGo API key is not required for basic usage
DUCKDUCKGO_API_KEY=
BRAVE_API_KEY=your_brave_key_here
SERPAPI_API_KEY=your_serpapi_key_here

# Web Fetch
WEB_FETCH_TIMEOUT=10000
WEB_FETCH_MAX_SIZE=1048576

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Reflection Configuration
REFLECTION_ENABLED=true
REFLECTION_MAX_ITERATIONS=3
REFLECTION_MIN_IMPROVEMENT=0.05
REFLECTION_QUALITY_TARGET=0.9
REFLECTION_TIMEOUT_PER_ITERATION=30000
